{
    "name": "@wpazderski/playwright-config",
    "version": "1.0.3",
    "description": "Common Playwright configs",
    "keywords": [
        "playwright",
        "config"
    ],
    "author": "Witold Pazderski",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/wpazderski/playwright-config.git"
    },
    "homepage": "https://github.com/wpazderski/playwright-config",
    "bugs": {
        "url": "https://github.com/wpazderski/playwright-config/issues"
    },
    "type": "module",
    "exports": {
        "./*": "./dist/*"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "rimraf ./dist/ && rimraf -g ./node_modules/.tmp/*.tsbuildinfo && tsc -b",
        "lint-check": "eslint ./ --flag unstable_native_nodejs_ts_config --flag unstable_config_lookup_from_file --max-warnings 0",
        "lint-fix": "eslint ./ --flag unstable_native_nodejs_ts_config --flag unstable_config_lookup_from_file --max-warnings 0 --fix",
        "prettier-check": "prettier ./ --check",
        "prettier-fix": "prettier ./ --write",
        "tsc-check": "tsc -b --noEmit",
        "check-licenses": "check-licenses",
        "check-outdated-packages": "check-outdated-packages",
        "check-all": "run-s lint-check prettier-check tsc-check check-licenses check-outdated-packages",
        "pre-commit-checks": "run-s check-all"
    },
    "devDependencies": {
        "@playwright/test": "^1.54.2",
        "@types/node": "^24.2.1",
        "@wpazderski/eslint-config": "^1.0.5",
        "@wpazderski/node-package-tools": "^1.0.0",
        "@wpazderski/prettier-config": "^1.0.3",
        "@wpazderski/typescript-config": "^1.0.4",
        "eslint": "^9.33.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.6.2",
        "rimraf": "^6.0.1",
        "typescript": "^5.9.2"
    },
    "peerDependencies": {
        "@playwright/test": "^1.52.0"
    },
    "packageManager": "pnpm@10.11.0",
    "engines": {
        "node": ">=24.0.0",
        "pnpm": ">=10.0.0",
        "npm": "please-use-pnpm",
        "yarn": "please-use-pnpm"
    }
}
