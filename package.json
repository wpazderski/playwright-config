{
    "name": "@wpazderski/playwright-config",
    "version": "1.0.0",
    "description": "Common Playwright configs",
    "keywords": [
        "playwright",
        "config"
    ],
    "author": "Witold Pazderski",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/wpazderski/playwright-config.git"
    },
    "homepage": "https://github.com/wpazderski/playwright-config",
    "bugs": {
        "url": "https://github.com/wpazderski/playwright-config/issues"
    },
    "type": "module",
    "exports": {
        "./*": "./configs/*"
    },
    "files": [
        "configs"
    ],
    "scripts": {
        "lint-check": "eslint ./ --flag unstable_native_nodejs_ts_config --flag unstable_config_lookup_from_file --max-warnings 0",
        "lint-fix": "eslint ./ --flag unstable_native_nodejs_ts_config --flag unstable_config_lookup_from_file --max-warnings 0 --fix",
        "prettier-check": "prettier ./ --check",
        "prettier-fix": "prettier ./ --write",
        "tsc-check": "tsc --noEmit",
        "check-all": "run-s lint-check prettier-check tsc-check",
        "pre-commit-checks": "run-s check-all"
    },
    "devDependencies": {
        "@playwright/test": "^1.52.0",
        "@types/node": "^22.15.29",
        "@wpazderski/eslint-config": "^1.0.4",
        "@wpazderski/prettier-config": "^1.0.2",
        "@wpazderski/typescript-config": "^1.0.3",
        "eslint": "^9.28.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.5.3",
        "typescript": "^5.8.3"
    },
    "peerDependencies": {
        "@playwright/test": "^1.52.0"
    },
    "packageManager": "pnpm@10.11.0",
    "engines": {
        "node": ">=24.0.0",
        "pnpm": ">=10.0.0",
        "npm": "please-use-pnpm",
        "yarn": "please-use-pnpm"
    }
}
